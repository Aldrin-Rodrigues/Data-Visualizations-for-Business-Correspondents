<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<link rel="stylesheet" type="text/css" href="/styles/predict.css">


<script>
  function updateAreaValue(value) {
      document.getElementById('areaValue').textContent = value;
  }

  function updateProductionValue(value) {
      document.getElementById('productionValue').textContent = value;
  }
</script>


<div class="main-container">
   <form action="/predict" id="form" class="form" method="POST">

    <label htmlFor="State">State:</label>
    <input type="text" name="State" value=Karnataka placeholder="State" /><br>

    <label htmlFor="crop">Crop:</label>
    <input type="text" name="crop" value=Garlic placeholder="Crop" /><br>

    <label htmlFor="season">Season:</label>
    <select id="season" name="season" value={season} >
        <option value="Kharif">Kharif</option>
        <option value="Rabi">Rabi</option>
        <option value="Autumn">Autumn</option>
        <option value="Summer">Summer</option>
        <option value="Winter">Winter</option>
        <option value="WholeYear">Whole Year</option>
    </select><br>

    <label htmlFor="area">Area:</label>
    <input type="range" id="area" name="area" min="1" max="34421" oninput="updateAreaValue(this.value)" placeholder="Area"/>
    <span id="areaValue"></span><br>
    
    <label htmlFor="production">Production:</label>
    <input type="range" id="production" name="production" min="0" max="77520" oninput="updateProductionValue(this.value)" />
    <span id="productionValue"></span><br>    

    <label htmlFor="rainfall">Annual Rainfall:</label>
    <input type="number" id="rainfall" name="rainfall" /><br>

    <label htmlFor="fertilizer">Fertilizer:</label>
    <input type="number" id="fertilizer" name="fertilizer" /><br>

    <label htmlFor="pesticide">Pesticide:</label>
    <input type="number" id="pesticide" name="pesticide" /><br>

    <button type="submit">Make Prediction</button>
</form>
<section id="cards" class="cards">
  <%if (locals.data) {%>

    <article class="card-item">
      <h2 class="card-activity">
        Prediction:
      </h2>
      <div class="card-info">
        <span class="card-participants">
          <%= data.prediction%>
        </span>
      </div>
    </article>

    <%}%>


      <%if (locals.error) {%>
        <div id="tag-error" class="tag-error">
          <%=error%>
        </div>
        <%}%>
</section>

</div>